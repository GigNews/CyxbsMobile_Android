<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#15315B"
            android:layout_marginBottom="5dp"
            android:lineHeight="20sp"
            android:text="@string/declare_submit_title" />

        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9915315B"
            android:textSize="14sp"
            android:text="@string/declare_submit_msg_1"
            android:layout_marginStart="6dp"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/declare_ic_circle" />

        <TextView
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9915315B"
            android:textSize="14sp"
            android:text="@string/declare_submit_msg_2"
            android:layout_marginStart="6dp"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/declare_ic_circle" />

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_gravity="start"
                android:theme="@style/Theme.MaterialComponents"
                android:backgroundTint="#C3D4EE"
                app:cornerRadius="32dp"
                android:elevation="0dp"
                android:textColor="@color/config_white_black"
                android:text="@string/declare_cancel_submit"
                android:paddingHorizontal="20dp"
                android:layout_width="wrap_content"
                android:layout_height="52dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_gravity="end"
                android:theme="@style/Theme.MaterialComponents"
                android:background="@drawable/declare_ic_btn_background"
                android:textColor="@color/config_white_black"
                android:text="@string/declare_confirm_submit"
                android:paddingHorizontal="20dp"
                android:layout_marginVertical="4dp"
                android:layout_width="wrap_content"
                android:layout_height="44dp" />
        </FrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
