<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.declare.pages.detail.widget.IncreaseCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/declare_detail_item_cd_cover"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp"
    android:backgroundTint="#0D0028FC"
    app:cardElevation="0dp"
    app:cardCornerRadius="30dp">

    <TextView
        android:id="@+id/declare_detail_item_tv_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="36dp"
        android:textColor="@color/config_level_three_font_color"
        android:textSize="14sp"
        tools:text="米哈游米哈游米哈游米哈游米哈游" />

    <ImageView
        android:id="@+id/declare_detail_item_iv_voted"
        android:layout_width="11dp"
        android:layout_height="7dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="54dp"
        android:src="@drawable/declare_ic_derail_voted"
        android:visibility="gone" />

    <TextView
        android:id="@+id/declare_detail_item_tv_percent"
        android:layout_width="35dp"
        android:layout_height="17dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="15dp"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="100%" />
</com.mredrock.cyxbs.declare.pages.detail.widget.IncreaseCardView>