<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/config_window_background"
        tools:context=".pages.post.PostActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <ImageButton
                android:id="@+id/declare_iv_toolbar_arrow_left"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/declare_ic_home_arrow_left"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/declare_home_bar"
                android:layout_width="67dp"
                android:layout_height="31dp"
                android:layout_marginStart="32dp"
                android:text="@string/declare_home_toolbar"
                android:textColor="#15315B"
                android:textSize="22sp" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:background="@color/common_grades_item_cardView_bg"
            android:layout_margin="8dp"
            app:cardCornerRadius="6dp"
            android:elevation="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_marginVertical="36dp"
                    android:layout_marginHorizontal="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/Theme.Material3.DayNight"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:hintAnimationEnabled="false"
                        app:hintEnabled="false"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/declare_input_bg"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
                            android:id="@+id/et_topic"
                            android:gravity="center"
                            android:padding="0dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#CC15315B"
                            android:textColorHint="#8015315B"
                            android:hint="@string/declare_please_input_topic" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_topic"
                        android:layout_marginVertical="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_submit"
                        android:text="@string/declare_submit_edit"
                        android:textSize="18sp"
                        android:textColor="@color/config_white_black"
                        android:background="@drawable/declare_ic_btn_background"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="16dp"
                        android:paddingHorizontal="32dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>