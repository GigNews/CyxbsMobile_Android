<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_marginTop="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="343dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ufield_check_constraintlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/ufieldTextview3"
            app:layout_constraintTop_toTopOf="@+id/ufieldTextview3">


            <TextView
                android:id="@+id/uField_todo_activity_name"
                android:layout_width="114dp"
                android:layout_height="25dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/uField_15315b"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/uField_todo_activity_time"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:textColor="@color/ufield_todo_time_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ufieldTextview"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="56dp"
                android:text="@string/ufield_todo_ac_name"
                android:textColor="@color/uField_9915315b"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/uField_todo_activity_type"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="56dp"
                android:textColor="@color/uField_6615315b"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/ufieldTextview"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ufieldTextview2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="@string/ufield_todo_ac_p_name"
                android:textColor="@color/uField_9915315b"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ufieldTextview" />

            <TextView
                android:id="@+id/uField_todo_activity_author"
                android:layout_width="63dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/uField_6615315b"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/ufieldTextview2"
                app:layout_constraintTop_toBottomOf="@+id/ufieldTextview" />

            <TextView
                android:id="@+id/ufieldTextview3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:text="@string/ufield_todo_ac_phone"
                android:textColor="@color/uField_9915315b"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ufieldTextview2" />

            <TextView
                android:id="@+id/uField_todo_activity_phone"
                android:layout_width="125dp"
                android:layout_height="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/uField_6615315b"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/ufieldTextview3"
                app:layout_constraintTop_toBottomOf="@+id/uField_todo_activity_author" />


            <Button
                android:id="@+id/uField_todo_btn_reject"
                android:layout_width="93dp"
                android:layout_height="34dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ufield_selector_btn_shape_one"
                android:text="@string/ufield_btn_refuse"
                android:textColor="@color/uField_646382"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/uField_todo_btn_accept" />

            <Button
                android:id="@+id/uField_todo_btn_accept"
                android:layout_width="93dp"
                android:layout_height="34dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ufield_selector_btn_shape_two"
                android:text="@string/ufield_btn_accept"
                android:textColor="@color/uField_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>