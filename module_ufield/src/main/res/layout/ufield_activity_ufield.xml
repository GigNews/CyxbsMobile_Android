<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uField_white"
    android:orientation="vertical"
    tools:context=".lyt.ui.UFieldActivity">

    <ImageView
        android:id="@+id/uField_back"
        android:layout_width="7dp"
        android:layout_height="16dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ufield_ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="53dp"
        android:src="@drawable/ufield_ic_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uField_cup"
        android:layout_width="16dp"
        android:layout_height="20.5dp"
        android:layout_marginStart="343dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/ufield_ic_cup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uField_search"
        android:layout_width="343dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="98dp"
        android:src="@drawable/ufield_ic_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uField_add"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="331dp"
        android:layout_marginTop="103dp"
        android:src="@drawable/ufield_ic_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="156dp"
        android:background="@color/uField_check_background"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/uField_tabLayout"
            android:layout_width="343dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            app:tabBackground="@drawable/ufield_ic_tab_shape"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed"
            app:tabRippleColor="@null"
            app:tabTextAppearance="@style/uFieldMyTabTextStyle"
            app:tabSelectedTextColor="@color/uField_tab_selected"
            app:tabTextColor="@color/uField_tab_color" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/uField_viewpager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>