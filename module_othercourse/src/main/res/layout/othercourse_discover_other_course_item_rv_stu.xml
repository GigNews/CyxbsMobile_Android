<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:layout_width="match_parent"
    android:layout_height="77dp">

    <ImageView
        android:id="@+id/other_course_avatar"
        android:src="@drawable/common_default_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/othercourse_avatar_image_tips" />

    <TextView
        android:id="@+id/discover_other_course_item_select_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_level_two_font_color"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:layout_gravity="top|start"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toEndOf="@+id/other_course_avatar"
        app:layout_constraintTop_toTopOf="@+id/other_course_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/other_course_avatar"
        tools:text="丁德桥" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discover_other_course_item_select_class"
        android:textColor="@color/common_level_two_font_color"
        android:textSize="13sp"
        android:layout_gravity="bottom|start"
        app:layout_constraintTop_toBottomOf="@+id/discover_other_course_item_select_name"
        app:layout_constraintStart_toStartOf="@+id/discover_other_course_item_select_name"
        app:layout_constraintBottom_toBottomOf="@+id/other_course_avatar"
        tools:text="软件工程" />

    <TextView
        android:id="@+id/other_course_tv_stu_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        tools:text="2018214306"
        app:layout_constraintTop_toTopOf="@+id/discover_other_course_item_select_name"
        app:layout_constraintBottom_toBottomOf="@+id/discover_other_course_item_select_name"
        app:layout_constraintStart_toEndOf="@+id/discover_other_course_item_select_name"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:background="@color/levelFourFontColor"
        android:alpha="0.1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/discover_other_course_item_select_name"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>