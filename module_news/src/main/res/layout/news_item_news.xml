<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_white_background"
    android:padding="15dp">


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_level_two_font_color"
        android:textSize="13sp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/tv_download"
        app:layout_constraintTop_toTopOf="@+id/tv_download"
        tools:text="2018年09月20日"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="65dp"
        android:layout_height="29dp"
        android:background="@drawable/news_shape_rectangle_blue_stroke"
        android:gravity="center"
        android:text="@string/news_hint_download"
        android:textColor="#788EFA"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="4dp"
        tools:visibility="visible"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/common_level_two_font_color"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_time"
            tools:text="如果你无法简洁的表达你的想法，那么只能说你还不够了解它。" />


</androidx.constraintlayout.widget.ConstraintLayout>