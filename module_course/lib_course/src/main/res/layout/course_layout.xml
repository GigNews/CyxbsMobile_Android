<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/config_common_background_color">

    <include
        layout="@layout/course_item_week"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mredrock.cyxbs.lib.course.view.scroll.impl.CourseScrollViewImpl
            android:id="@+id/course_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mredrock.cyxbs.lib.course.view.course.CourseLayout
                android:id="@+id/course_courseLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="680dp"
                app:net_rowCount="14"
                app:net_columnCount="8" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:tag="test"
                    app:net_layout_startRow="0"
                    app:net_layout_endRow="0"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="1"
                    app:net_layout_endRow="1"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="2"
                    app:net_layout_endRow="2"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="3"
                    app:net_layout_endRow="3"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="5"
                    app:net_layout_endRow="5"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="6"
                    app:net_layout_endRow="6"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="7"
                    app:net_layout_endRow="7"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="8"
                    app:net_layout_endRow="8"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="10"
                    app:net_layout_endRow="10"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="10"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="11"
                    app:net_layout_endRow="11"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="11"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="12"
                    app:net_layout_endRow="12"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="12"
                    android:textColor="@color/config_level_one_font_color"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="13"
                    app:net_layout_endRow="13"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="中\n午"
                    android:textColor="@color/course_noon_dusk_tv"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="4"
                    app:net_layout_endRow="4"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="下\n午"
                    android:textColor="@color/course_noon_dusk_tv"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    app:net_layout_startRow="9"
                    app:net_layout_endRow="9"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="HardcodedText,SpUsage" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/course_iv_noon_fold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/course_ic_course_arrow"
                    app:net_layout_startRow="3"
                    app:net_layout_endRow="5"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="ContentDescription" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/course_iv_noon_unfold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/course_ic_course_arrow"
                    android:rotation="90"
                    app:net_layout_startRow="3"
                    app:net_layout_endRow="4"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="ContentDescription" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/course_iv_dusk_fold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/course_ic_course_arrow"
                    app:net_layout_startRow="8"
                    app:net_layout_endRow="10"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="ContentDescription" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/course_iv_dusk_unfold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    app:srcCompat="@drawable/course_ic_course_arrow"
                    android:rotation="90"
                    app:net_layout_startRow="8"
                    app:net_layout_endRow="9"
                    app:net_layout_startColumn="0"
                    app:net_layout_endColumn="0"
                    tools:ignore="ContentDescription" />

            </com.mredrock.cyxbs.lib.course.view.course.CourseLayout>
        </com.mredrock.cyxbs.lib.course.view.scroll.impl.CourseScrollViewImpl>

        <ImageView
            android:id="@+id/course_iv_no_lesson"
            android:layout_width="210dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/config_ic_empty_holder"
            tools:ignore="ContentDescription"
            app:layout_constraintEnd_toEndOf="@+id/course_tv_no_lesson"
            app:layout_constraintBottom_toTopOf="@+id/course_tv_no_lesson"
            app:layout_constraintStart_toStartOf="@+id/course_tv_no_lesson" />

        <TextView
            android:id="@+id/course_tv_no_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一片寂静"
            tools:ignore="HardcodedText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>