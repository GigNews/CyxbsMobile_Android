<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/notification_tv_tl_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:text="活动通知"
        android:textColor="@color/notification_home_tabLayout_text_selected"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/notification_iv_tl_red_dots"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/notification_tv_tl_tab"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/notification_ic_home_reddots"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>