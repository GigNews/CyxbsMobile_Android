<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--    PopupWindow 进入进出动画-->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/popup_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--    文字用到的text Appearance-->
    <style name="notification_toolbar_tv">

        <item name="android:textSize">
            22sp
        </item>

        <item name="android:textColor">
            #112C54
        </item>

    </style>

    <style name="notification_setting_tv">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #112C54
        </item>

    </style>

    <style name="notification_setting_tips_tv">

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:textColor">
            #66142C52
        </item>

    </style>

    <style name="notification_home_popup_tv">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            0.03
        </item>

        <item name="android:textColor">
            #112C54
        </item>

    </style>

    <style name="tab_style" tools:ignore="ResourceName">
        <item name="android:textSize">18sp</item>
    </style>
</resources>