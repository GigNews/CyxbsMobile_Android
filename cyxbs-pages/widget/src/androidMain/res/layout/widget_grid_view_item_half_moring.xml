<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_course_item_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/affair"
        android:layout_width="@dimen/widget_lesson_decoration_width"
        android:layout_height="@dimen/widget_lesson_decoration_height"
        android:layout_marginStart="@dimen/widget_course_margin"
        android:layout_marginTop="@dimen/widget_lesson_decoration_margin_top"
        android:layout_marginEnd="@dimen/widget_course_margin"
        android:src="@drawable/widget_shape_lesson_with_affair"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_course_item_height_half"
        android:background="@drawable/widget_shape_course_grid_moring_item"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="@dimen/widget_course_margin"
        android:text="@string/widget_three_lesson_tips"
        android:textColor="@color/widget_morning_text_color"
        android:textSize="@dimen/widget_course_text_size" />

    <TextView
        android:id="@+id/half_affair_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_course_item_height_half"
        android:background="@drawable/widget_shape_course_grid_affair"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="@dimen/widget_course_margin"
        android:textSize="@dimen/widget_course_text_size"
        android:visibility="gone"/>

</LinearLayout>