<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="487dp"
        android:paddingStart="23dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/sport_tv_feed_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体育打卡信息说明"
            android:textColor="@color/sport_feed_dialog_text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/sport_tv_feed_dialog_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/sport_feed_dialog_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/sport_tv_feed_dialog_content1"
            app:layout_constraintTop_toBottomOf="@+id/sport_tv_feed_dialog_title"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/sport_tv_feed_dialog_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/sport_feed_dialog_text_color"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/sport_tv_feed_dialog_title2"
            app:layout_constraintTop_toBottomOf="@+id/sport_tv_feed_dialog_title1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/sport_tv_feed_dialog_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/sport_feed_dialog_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/sport_tv_feed_dialog_content2"
            app:layout_constraintTop_toBottomOf="@+id/sport_tv_feed_dialog_content1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/sport_tv_feed_dialog_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/sport_feed_dialog_text_color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sport_tv_feed_dialog_title2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/sport_tv_feed_dialog_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/sport_feed_dialog_text_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/sport_tv_feed_dialog_content3"
            app:layout_constraintTop_toBottomOf="@+id/sport_tv_feed_dialog_content2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/sport_tv_feed_dialog_content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/sport_feed_dialog_text_color"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sport_tv_feed_dialog_title3"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sport_btn_feed_dialog_confirm"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="129dp"
            android:layout_height="34dp"
            android:backgroundTint="#4A44E4"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="确认"
            android:textColor="#ffffff"
            android:theme="@style/Theme.MaterialComponents"
            app:cornerRadius="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>