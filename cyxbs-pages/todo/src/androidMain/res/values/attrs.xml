<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="CheckLineView" tools:ignore="ResourceName">
        <!--    左侧check圈的半径-->
        <attr name="left_radius" format="dimension"/>
        <!--    选中之后的颜色-->
        <attr name="checked_line_color" format="color"/>
        <!--    未选中时的颜色-->
        <attr name="unchecked_line_color" format="color"/>
        <!--    是否已经check-->
        <attr name="is_checked" format="boolean"/>
        <!--    未check的圈圈的宽度-->
        <attr name="uncheck_line_width" format="dimension"/>
        <!--    check的圈圈的宽度-->
        <attr name="checked_line_width" format="dimension"/>
        <!--    是否绘制划线-->
        <attr name="with_check_line" format="boolean"/>
        <!--    起始角度-->
        <attr name="start_angle" format="float"/>
    </declare-styleable>
</resources>