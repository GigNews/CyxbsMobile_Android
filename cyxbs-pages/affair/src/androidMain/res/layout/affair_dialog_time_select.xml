<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.gzuliyujiang.wheelview.widget.WheelView
        android:id="@+id/affair_wheel_view_week"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/affair_tv_sure"
        app:layout_constraintEnd_toStartOf="@+id/affair_wheel_view_begin"
        app:layout_constraintStart_toStartOf="parent"
        app:wheel_atmosphericEnabled="true"
        app:wheel_curvedEnabled="true"
        app:wheel_curvedIndicatorSpace="4dp"
        app:wheel_curvedMaxAngle="60"
        app:wheel_indicatorColor="#FF0081FF"
        app:wheel_itemSpace="50dp"
        app:wheel_itemTextColor="#FF474747"
        app:wheel_itemTextColorSelected="#FF0081FF"
        app:wheel_itemTextSize="20sp" />

    <com.github.gzuliyujiang.wheelview.widget.WheelView
        android:id="@+id/affair_wheel_view_begin"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/affair_wheel_view_end"
        app:layout_constraintStart_toEndOf="@+id/affair_wheel_view_week"
        app:layout_constraintTop_toTopOf="@+id/affair_wheel_view_week"
        app:wheel_atmosphericEnabled="true"
        app:wheel_curvedEnabled="true"
        app:wheel_curvedIndicatorSpace="4dp"
        app:wheel_curvedMaxAngle="60"
        app:wheel_indicatorColor="#FF0081FF"
        app:wheel_itemSpace="50dp"
        app:wheel_itemTextColor="#FF474747"
        app:wheel_itemTextColorSelected="#FF0081FF"
        app:wheel_itemTextSize="20sp" />

    <com.github.gzuliyujiang.wheelview.widget.WheelView
        android:id="@+id/affair_wheel_view_end"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/affair_wheel_view_begin"
        app:layout_constraintTop_toTopOf="@+id/affair_wheel_view_begin"
        app:wheel_atmosphericEnabled="true"
        app:wheel_curvedEnabled="true"
        app:wheel_curvedIndicatorSpace="4dp"
        app:wheel_curvedMaxAngle="60"
        app:wheel_indicatorColor="#FF0081FF"
        app:wheel_itemSpace="50dp"
        app:wheel_itemTextColor="#FF474747"
        app:wheel_itemTextColorSelected="#FF0081FF"
        app:wheel_itemTextSize="20sp" />

    <TextView
        android:id="@+id/affair_tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/affair_shape_affair_modify_button_background"
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:paddingTop="8dp"
        android:paddingEnd="40dp"
        android:paddingBottom="8dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>