<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/course_iv_find_course_link_bg_ing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/course_find_course_link_bg"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="343:84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/course_ic_find_course_link_head_ing"
        app:layout_constraintTop_toTopOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintStart_toStartOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintEnd_toStartOf="@id/course_view_find_course_link_line_ing"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/course_view_find_course_link_line_ing"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="58dp"
        app:layout_constraintTop_toTopOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintStart_toStartOf="@id/course_iv_find_course_link_bg_ing"
        android:background="@color/course_find_course_link_line" />

    <TextView
        android:id="@+id/course_tv_find_course_link_name_ing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/config_level_one_font_color"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintBottom_toTopOf="@id/course_tv_find_course_link_major_ing"
        app:layout_constraintStart_toStartOf="@id/course_tv_find_course_link_major_ing"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText"
        tools:text="郭祥瑞" />

    <TextView
        android:id="@+id/course_tv_find_course_link_major_ing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:textColor="@color/config_level_one_font_color"
        app:layout_constraintTop_toBottomOf="@id/course_tv_find_course_link_name_ing"
        app:layout_constraintBottom_toTopOf="@id/course_tv_find_course_link_stu_num_ing"
        app:layout_constraintStart_toStartOf="@id/course_view_find_course_link_line_ing"
        tools:ignore="HardcodedText"
        tools:text="软件工程专业"/>

    <TextView
        android:id="@+id/course_tv_find_course_link_stu_num_ing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/config_level_four_font_color"
        app:layout_constraintTop_toBottomOf="@id/course_tv_find_course_link_major_ing"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintStart_toStartOf="@id/course_tv_find_course_link_major_ing"
        tools:ignore="HardcodedText"
        tools:text="2020214988"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        app:srcCompat="@drawable/course_ic_find_course_link_arrow"
        app:layout_constraintTop_toTopOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_find_course_link_bg_ing"
        app:layout_constraintEnd_toEndOf="@id/course_iv_find_course_link_bg_ing"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>