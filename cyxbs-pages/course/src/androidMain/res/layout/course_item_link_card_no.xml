<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/course_iv_find_course_link_bg_no"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/course_find_course_link_bg"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="343:84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/course_ic_find_course_link_head_no"
        app:layout_constraintTop_toTopOf="@id/course_iv_find_course_link_bg_no"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_find_course_link_bg_no"
        app:layout_constraintStart_toStartOf="@id/course_iv_find_course_link_bg_no"
        app:layout_constraintEnd_toStartOf="@id/course_view_find_course_link_line_no"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/course_view_find_course_link_line_no"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="58dp"
        app:layout_constraintTop_toTopOf="@id/course_iv_find_course_link_bg_no"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_find_course_link_bg_no"
        app:layout_constraintStart_toStartOf="@id/course_iv_find_course_link_bg_no"
        android:background="@color/course_find_course_link_line" />

    <TextView
        android:id="@+id/course_tv_find_course_link_tv1_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有关联同学哦"
        android:textColor="@color/course_find_course_link_add_tv"
        app:layout_constraintTop_toTopOf="@id/course_iv_find_course_link_bg_no"
        app:layout_constraintBottom_toTopOf="@id/course_tv_find_course_link_tv2_no"
        app:layout_constraintStart_toStartOf="@id/course_tv_find_course_link_tv2_no"
        app:layout_constraintEnd_toEndOf="@id/course_tv_find_course_link_tv2_no"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/course_tv_find_course_link_tv2_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索同学添加关联关系吧！"
        android:textColor="@color/course_find_course_link_add_tv"
        app:layout_constraintTop_toBottomOf="@id/course_tv_find_course_link_tv1_no"
        app:layout_constraintBottom_toBottomOf="@id/course_iv_find_course_link_bg_no"
        app:layout_constraintStart_toStartOf="@id/course_view_find_course_link_line_no"
        app:layout_constraintEnd_toEndOf="@id/course_iv_find_course_link_bg_no"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>