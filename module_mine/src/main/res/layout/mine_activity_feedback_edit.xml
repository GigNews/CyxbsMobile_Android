<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.mredrock.cyxbs.mine.page.feedback.edit.viewmodel.FeedbackEditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mine_relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/v_underline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.1"
                android:background="#2A4E84" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_center_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="3dp"
                android:background="@color/common_transparent_background"
                android:backgroundTint="@color/common_transparent_background"
                android:contentDescription="@string/mine_stamp_back_iv"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="40dp"
                app:pressedTranslationZ="13dp"
                app:srcCompat="@drawable/mine_ic_center_back" />

            <TextView
                android:id="@+id/tv_edit_toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@id/fab_center_back"
                android:gravity="center_vertical"
                android:text="@string/mine_feedback_toolbar_title"
                android:textColor="@color/mine_goods_toolbar_title_tv"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mine_guideline14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mine_guideline17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.82" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mine_constraintlayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/mine_shape_edit_bg"
            app:layout_constraintBottom_toTopOf="@+id/mine_guideline17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mine_guideline14">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mine_guideline18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.11" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mine_guideline19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.68" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mine_guideline20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.75" />

            <EditText
                android:id="@+id/et_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autofillHints="name"
                android:background="#00000000"
                android:hint="@string/mine_feed_edit_title_tv"
                android:inputType="text"
                android:maxLength="12"
                android:singleLine="false"
                android:textColor="@color/mine_feedback_edit_title"
                android:textColorHint="@color/mine_feedback_edit_title_hint"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/mine_guideline18"
                app:layout_constraintStart_toStartOf="@+id/et_edit_pic"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

            <EditText
                android:id="@+id/et_edit_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="16dp"
                android:autofillHints="name"
                android:background="#00000000"
                android:hint="@string/mine_feedback_edit_description_tv"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:textColor="@color/mine_feedback_edit_description"
                android:textColorHint="@color/mine_feedback_edit_description_hint"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/mine_guideline19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_edit_pic"
                app:layout_constraintTop_toTopOf="@+id/mine_guideline18"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />


            <TextView
                android:id="@+id/et_edit_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:text="@string/mine_feedback_edit_pic_tv"
                android:textColor="@color/mine_feedback_edit_pic"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/mine_guideline20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mine_guideline19"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="TextContrastCheck" />

            <View
                android:id="@+id/v_first"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mine_feedback_edit_underline"
                app:layout_constraintBottom_toTopOf="@+id/mine_guideline18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mine_guideline18" />

            <View
                android:id="@+id/v_underline_second"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mine_feedback_edit_underline"
                app:layout_constraintBottom_toTopOf="@+id/mine_guideline19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mine_guideline19" />

            <TextView
                android:id="@+id/tv_title_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@{String.valueOf(vm.editTitleNum)}"
                android:textColor="@color/mine_feedback_edit_num"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_edit_title"
                app:layout_constraintEnd_toEndOf="@+id/tv_des_num"
                app:layout_constraintTop_toTopOf="@+id/et_edit_title"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/tv_des_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@{@string/mine_feedback_edit_description_num(vm.editDesNum)}"
                android:textColor="@color/mine_feedback_edit_num"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/mine_guideline19"
                app:layout_constraintEnd_toEndOf="@+id/tv_pic_num"
                app:layout_constraintTop_toTopOf="@+id/mine_guideline18"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/tv_pic_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:text="@string/mine_feedback_edit_pic_num"
                android:textColor="@color/mine_feedback_edit_num"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_edit_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_edit_pic"
                tools:ignore="TextContrastCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/mine_button"
            android:layout_width="117dp"
            android:layout_height="41dp"
            android:background="@drawable/mine_shape_edit_btn_bg"
            android:text="@string/mine_feedback_edit_btn_tv"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mine_guideline17"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mine_guideline21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.11" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>