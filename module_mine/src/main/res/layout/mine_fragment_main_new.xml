<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mine_user_ll"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:background="@drawable/mine_bg_user_header"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mine_user_cl_info"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/mine_bg_user_cl">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mine_user_avatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/common_default_avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mine_user_username"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="28dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="鱼鱼鱼鱼鱼鱼鱼鱼鱼鱼"
                android:textColor="#15315B"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/mine_user_avatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mine_user_introduce"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="11dp"
                android:text="这是一条不普通的个性签名这是一条不普通的给"
                android:textColor="#CC15315B"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mine_user_avatar"
                app:layout_constraintTop_toBottomOf="@+id/mine_user_username" />

            <TextView
                android:id="@+id/mine_user_tv_dynamic_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="52dp"
                android:fontFamily="@font/impact_min"
                android:gravity="center"
                android:text="@string/mine_number_default"
                android:textColor="#2A4E84"
                android:textSize="25sp"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/mine_user_tv_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:fontFamily="@font/impact_min"
                android:gravity="center"
                android:text="@string/mine_number_default"
                android:textColor="#2A4E84"
                android:textSize="25sp"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="@+id/mine_user_tv_dynamic_number"
                app:layout_constraintStart_toEndOf="@+id/mine_user_tv_dynamic_number"
                app:layout_constraintTop_toTopOf="@+id/mine_user_tv_dynamic_number"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/mine_user_tv_praise_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/impact_min"
                android:gravity="center"
                android:text="@string/mine_number_default"
                android:textColor="#2A4E84"
                android:textSize="25sp"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="@+id/mine_user_tv_comment_number"
                app:layout_constraintStart_toEndOf="@+id/mine_user_tv_comment_number"
                app:layout_constraintTop_toTopOf="@+id/mine_user_tv_comment_number" />

            <TextView
                android:id="@+id/mine_user_tv_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="3dp"
                android:text="动态"
                android:textColor="#B315315B"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/mine_user_tv_dynamic_number"
                app:layout_constraintStart_toStartOf="@+id/mine_user_tv_dynamic_number"
                app:layout_constraintTop_toBottomOf="@+id/mine_user_tv_dynamic_number" />

            <TextView
                android:id="@+id/mine_user_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="3dp"
                android:text="评论"
                android:textColor="#B315315B"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/mine_user_tv_comment_number"
                app:layout_constraintStart_toStartOf="@+id/mine_user_tv_comment_number"
                app:layout_constraintTop_toBottomOf="@+id/mine_user_tv_comment_number" />

            <TextView
                android:id="@+id/mine_user_tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="3dp"
                android:text="获赞"
                android:textColor="#B315315B"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/mine_user_tv_praise_number"
                app:layout_constraintStart_toStartOf="@+id/mine_user_tv_praise_number"
                app:layout_constraintTop_toBottomOf="@+id/mine_user_tv_praise_number" />

            <TextView
                android:id="@+id/mine_user_tv_unchecked_comment"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/mine_shape_bg_point_unchecked"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/mine_user_tv_comment_number"
                app:layout_constraintStart_toEndOf="@+id/mine_user_tv_comment_number"
                app:layout_constraintTop_toTopOf="@+id/mine_user_tv_comment_number"
                app:layout_constraintVertical_bias="0.08" />

            <TextView
                android:id="@+id/mine_user_tv_unchecked_praise"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/mine_shape_bg_point_unchecked"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/mine_user_tv_praise_number"
                app:layout_constraintStart_toEndOf="@+id/mine_user_tv_praise_number"
                app:layout_constraintTop_toTopOf="@+id/mine_user_tv_praise_number"
                app:layout_constraintVertical_bias="0.08" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="251dp"
        android:background="@drawable/mine_shape_bg_user"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mine_user_iv_center_notification"
                android:layout_width="41dp"
                android:layout_height="40.84dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mine_ic_notification_center" />

            <ImageView
                android:id="@+id/mine_user_iv_center_stamp"
                android:layout_width="39.6dp"
                android:layout_height="39.1dp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toStartOf="@+id/mine_user_iv_center_feedback"
                app:layout_constraintStart_toEndOf="@+id/mine_user_iv_center_notification"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mine_ic_stamp_center" />

            <ImageView
                android:id="@+id/mine_user_iv_center_feedback"
                android:layout_width="39.6dp"
                android:layout_height="38dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="51dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mine_ic_feedback_center" />

            <TextView
                android:id="@+id/mine_user_tv_center_notification"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:text="消息中心"
                android:textColor="#15315B"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/mine_user_iv_center_notification"
                app:layout_constraintStart_toStartOf="@+id/mine_user_iv_center_notification"
                app:layout_constraintTop_toBottomOf="@+id/mine_user_iv_center_notification" />

            <TextView
                android:id="@+id/mine_user_tv_center_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮票中心"
                android:textColor="#15315B"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/mine_user_tv_center_notification"
                app:layout_constraintEnd_toEndOf="@+id/mine_user_iv_center_stamp"
                app:layout_constraintStart_toStartOf="@+id/mine_user_iv_center_stamp"
                app:layout_constraintTop_toTopOf="@+id/mine_user_tv_center_notification" />

            <TextView
                android:id="@+id/mine_user_tv_center_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="反馈中心"
                android:textColor="#15315B"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/mine_user_tv_center_stamp"
                app:layout_constraintEnd_toEndOf="@+id/mine_user_iv_center_feedback"
                app:layout_constraintStart_toStartOf="@+id/mine_user_iv_center_feedback"
                app:layout_constraintTop_toTopOf="@+id/mine_user_tv_center_stamp" />

            <TextView
                android:id="@+id/mine_user_tv_unchecked_notification_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="88dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/mine_shape_bg_point_unchecked"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="99"
                android:textSize="8sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/mine_shape_bg_user_sign">

            <TextView
                android:id="@+id/mine_user_tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:text="已连续签到 0 天"
                android:textColor="#15315B"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mine_user_btn_sign"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="16dp"
                android:background="@drawable/mine_shape_bg_user_btn_sign"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:text="签到"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/mine_user_fm_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:text="关于我们"
                android:textColor="#15315B"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="17dp"
                android:src="@drawable/mine_ic_arrow_right" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/mine_user_fm_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:text="设置"
                android:textColor="#15315B"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="17dp"
                android:src="@drawable/mine_ic_arrow_right" />
        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>