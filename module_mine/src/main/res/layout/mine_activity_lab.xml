<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_shape_activity_background"
    android:orientation="vertical"
    tools:context=".page.lab.LabActivity">

    <include
        android:id="@+id/lab_toolbar"
        layout="@layout/common_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mine_lab_fl_skin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/mine_shape_lab_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mine_lab_tv_content">

            <TextView
                android:id="@+id/mine_lab_tv_skin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="@string/mine_skin"
                android:textColor="@color/mine_lab_tv_item_title"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mine_lab_tv_skin_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/mine_lab_skin_content"
                android:textColor="@color/mine_lab_tv_item_content"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/mine_lab_tv_skin_title"
                app:layout_constraintTop_toBottomOf="@id/mine_lab_tv_skin_title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="33dp"
                android:src="@drawable/mine_ic_lab_arrow_right"
                app:layout_constraintBottom_toBottomOf="@id/mine_lab_tv_skin_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/mine_lab_tv_skin_title" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:scaleType="center"
            android:src="@drawable/mine_ic_lab_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/mine_lab_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27.5dp"
            android:text="@string/mine_lab_title"
            android:textColor="@color/mine_lab_tv_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mine_lab_tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/mine_lab_title2"
            android:textColor="@color/mine_lab_tv_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mine_lab_tv_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine_ic_lab_symbol"
            app:layout_constraintBottom_toBottomOf="@id/mine_lab_tv_title2"
            app:layout_constraintStart_toEndOf="@id/mine_lab_tv_title2"
            app:layout_constraintTop_toTopOf="@id/mine_lab_tv_title2" />

        <TextView
            android:id="@+id/mine_lab_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="41dp"
            android:text="@string/mine_lab_content"
            android:textColor="@color/mine_lab_tv_content"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mine_lab_tv_title2" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>