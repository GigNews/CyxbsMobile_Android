<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="colorPrimary">#169ce4</color>
    <color name="colorPrimaryDark">#169ce4</color>
    <color name="l_pp_activity_bg">#F9F9F9</color>
    <color name="l_pp_bottomBar_bg">#D8FFFFFF</color>
    <color name="l_pp_bottomBar_enabled_text_color">#333333</color>
    <color name="l_pp_folder_count_textColor">#616161</color>
    <color name="l_pp_folder_item_bg">#fff</color>
    <color name="l_pp_folder_item_pressed_bg">#EFEFEF</color>
    <color name="l_pp_folder_line">#F3F3F3</color>
    <color name="l_pp_folder_name_textColor">#1C1C1C</color>
    <color name="l_pp_navigationBarColor">@android:color/black</color>
    <color name="l_pp_photo_preview_bg">#000</color>
    <dimen name="l_pp_toolBar_height">56dp</dimen>
    <string name="l_pp_all_image">所有图片</string>
    <string name="l_pp_apply">使用</string>
    <string name="l_pp_picture">图片</string>
    <string name="l_pp_preview">预览</string>
    <string name="l_pp_toast_photo_picker_max">最多只能选择 %1$d 张图片</string>
    <string name="l_pp_view_photo">查看图片</string>
    <style name="LPPBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- toolbar（actionbar）背景颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 底部导航栏的颜色 -->
        <item name="android:navigationBarColor" ns1:targetApi="lollipop">
            @color/l_pp_navigationBarColor
        </item>

    </style>
    <style name="LPPDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="LPhotoTheme" parent="LPPBaseTheme">

        <!--通用属性（图片选择、图片预览共用）-->
        <item name="l_pp_toolBar_height">56dp</item>
        <item name="l_pp_toolBar_backIcon">@drawable/ic_l_pp_back_android</item>
        <item name="l_pp_toolBar_title_size">16sp</item>
        <item name="l_pp_bottomBar_height">50dp</item>

        <!--图片选择页面属性-->
        <item name="l_pp_status_bar_color">@color/colorPrimaryDark</item>
        <item name="l_pp_toolBar_background">@color/colorPrimary</item>
        <item name="l_pp_picker_activity_bg">@color/l_pp_activity_bg</item>
        <item name="l_pp_toolBar_title_color">#FFFFFF</item><!--顶部toolBar字体颜色-->
        <item name="l_pp_picker_bottomBar_background">@color/l_pp_bottomBar_bg</item>
        <item name="l_pp_picker_bottomBar_enabled_text_color">
            @color/l_pp_bottomBar_enabled_text_color
        </item>
        <item name="l_pp_picker_bottomBar_disabled_text_color">#acacac</item><!--底部按钮关闭时的颜色-->

        <!--图片分割线宽度-->
        <item name="l_pp_picker_pic_spacing">2dp</item>

        <!--圆形选择框样式（图片选择、图片预览共用，有特别说明的除外）-->
        <item format="color" name="l_pp_checkBox_color_tick">#fff</item><!--勾勾颜色-->
        <item format="integer" name="l_pp_checkBox_duration">100</item><!--动画时间-->
        <item format="color" name="l_pp_checkBox_color_checked">@color/colorPrimary
        </item><!--选择后的背景色-->
        <item format="dimension" name="l_pp_checkBox_stroke_width">2dp</item><!--（预览页面）边框宽度-->
        <item format="dimension" name="l_pp_checkBox_tick_width">2dp</item><!--勾勾的线条宽度-->

    </style>
    <declare-styleable name="LPPAttr">
        <!--通用属性-->
        <attr format="dimension" name="l_pp_toolBar_height"/>
        <attr format="reference" name="l_pp_toolBar_backIcon"/>
        <attr format="dimension" name="l_pp_toolBar_title_size"/>
        <attr format="dimension" name="l_pp_bottomBar_height"/>

        <attr format="reference|color" name="l_pp_toolBar_background"/>
        <attr format="color" name="l_pp_status_bar_color"/>
        <attr format="color" name="l_pp_picker_activity_bg"/>

        <attr format="color" name="l_pp_picker_bottomBar_background"/>
        <attr format="color" name="l_pp_picker_bottomBar_enabled_text_color"/>
        <attr format="color" name="l_pp_picker_bottomBar_disabled_text_color"/>


        <attr format="dimension" name="l_pp_picker_pic_spacing"/><!--图片之间间隔-->
        <attr format="color" name="l_pp_toolBar_title_color"/><!--仅对图片选择页面生效-->

        <!--圆形选择框样式-->
        <attr format="color" name="l_pp_checkBox_color_tick"/><!--勾勾颜色-->
        <attr format="integer" name="l_pp_checkBox_duration"/><!--动画时间-->
        <attr format="color" name="l_pp_checkBox_color_checked"/><!--选择后的背景色-->
        <attr format="dimension" name="l_pp_checkBox_stroke_width"/><!--（预览页面）边框宽度-->
        <attr format="dimension" name="l_pp_checkBox_tick_width"/><!--勾勾的线条宽度-->





    </declare-styleable>
</resources>