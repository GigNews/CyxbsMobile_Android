<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        透明状态栏-->
        <item name="statusBarBackground">@color/common_transparent_background</item>
        <!--        每个Activity的Window背景，最好别设置透明或者空-->
        <item name="android:windowBackground">@color/common_window_background</item>
        <!--        Transition转场动画，暂未启用-->
        <item name="android:windowEnterTransition">@transition/common_fade</item>
        <item name="android:windowExitTransition">@transition/common_fade</item>
        <item name="android:windowSharedElementEnterTransition">@transition/common_app_transaction
        </item>
        <item name="android:windowSharedElementExitTransition">@transition/common_app_transaction
        </item>
        <item name="actionMenuTextColor">@color/common_level_two_font_color</item>
        <!--   Material Dialog color-->
        <item name="md_color_title">@color/common_level_three_font_color</item>
        <item name="md_color_content">@color/levelFourFontColor</item>
        <item name="md_color_button_text">@color/common_level_two_font_color</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme" tools:ignore="ResourceName">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog" tools:ignore="ResourceName">
        <!--        dialog是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--        dialog是否悬浮在activity上,设置为false，相当于布局在activity中，例如软键盘，可以顶起false的dialog-->
        <item name="android:windowIsFloating">true</item>

        <item name="android:windowIsTranslucent">true</item>
        <!--        状态栏字体颜色，只是在安卓6.0以上可用-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!--        去除dialog最底部的灰色背景-->
        <item name="colorBackgroundFloating">@color/common_transparent_background</item>
        <!--        去除dialog默认白色背景-->
        <item name="android:background">@android:color/transparent</item>
        <!--        是否加遮罩（对话框出现时，背景变暗。为true则充许变暗）-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="common_LPhotoTheme" parent="LPhotoTheme">
        <!--页面通用属性（图片选择、图片预览共用）-->
        <item name="l_pp_toolBar_height">56dp</item>
        <item name="l_pp_toolBar_backIcon">@drawable/common_ic_back</item><!--返回按钮资源-->
        <item name="l_pp_toolBar_title_size">16sp</item><!--toolBar上字体大小-->
        <item name="l_pp_bottomBar_height">50dp</item><!--底栏的高度-->
        <!--图片选择页面属性-->
        <item name="l_pp_status_bar_color">@color/common_photo_select_status_color
        </item><!--状态栏颜色-->
        <item name="l_pp_toolBar_background">@color/common_photo_select_status_color
        </item><!--toolBar颜色-->
        <item name="l_pp_picker_activity_bg">@color/common_window_background
        </item><!--activity背景颜色-->
        <item name="l_pp_toolBar_title_color">@color/common_level_two_font_color
        </item><!--(图片选择页面)顶部toolBar字体颜色-->
        <item name="l_pp_picker_bottomBar_background">@color/common_window_background
        </item><!--底栏的颜色，如果需要毛玻璃效果，颜色加上透明度-->
        <item name="l_pp_picker_bottomBar_enabled_text_color">#333333</item><!--底部按钮启用时的颜色-->

        <!--图片分割线宽度-->

        <!--圆形选择框样式（图片选择、图片预览共用，有特别说明的除外）-->
        <item name="l_pp_checkBox_color_tick" format="color">#00FF7F</item><!--勾勾颜色-->
        <item name="l_pp_checkBox_duration" format="integer">100</item><!--动画时间-->
        <item name="l_pp_checkBox_color_checked" format="color">@color/colorPrimary
        </item><!--选择后的背景色-->
        <item name="l_pp_checkBox_stroke_width" format="dimension">2dp</item><!--（仅预览页面）圆圈边框宽度-->
        <item name="l_pp_checkBox_tick_width" format="dimension">2dp</item><!--勾勾的线条宽度-->
    </style>

</resources>
