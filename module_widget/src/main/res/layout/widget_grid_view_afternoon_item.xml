<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_course_item_height"
    android:background="@drawable/widget_shape_course_grid_afternoon_item"
    android:orientation="vertical">


    <TextView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/widget_course_margin"
        android:layout_marginTop="@dimen/widget_course_margin"
        android:layout_marginEnd="@dimen/widget_course_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/widget_afternoon_text_color"
        android:textSize="@dimen/widget_course_text_size" />

    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/widget_course_margin"
        android:layout_marginEnd="@dimen/widget_course_margin"
        android:layout_marginBottom="@dimen/widget_course_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/widget_afternoon_text_color"
        android:textSize="@dimen/widget_course_text_size" />

    <ImageView
        android:id="@+id/affair"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/widget_shape_lesson_with_affair"
        android:visibility="gone" />

</RelativeLayout>