<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="8dp"
        android:background="@drawable/widget_shape_bg_title">

        <ImageView
            android:id="@+id/widget_little_refresh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:src="@drawable/widget_ic_fresh" />

        <TextView
            android:id="@+id/widget_little_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="3dp"
            android:text="今日课表"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_shape_course_background"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_little_courseName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:singleLine="true"
                android:text="请刷新数据"
                android:textColor="@color/widget_colorTextBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/widget_little_up"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/widget_ic_expand_less_black_24dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/widget_little_room"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:text="=_="
                android:textColor="@color/widget_colorTextBlack"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/widget_little_down"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/widget_ic_expand_more_black_24dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>