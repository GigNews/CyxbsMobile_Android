<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="QuizTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        透明状态栏-->
        <item name="statusBarBackground">@color/common_transparent_background</item>
        <!--        每个Activity的Window背景，最好别设置透明或者空-->
        <item name="android:windowBackground">@color/common_window_background</item>
    </style>

    <style name="SearchTheme" parent="AppTheme" tools:ignore="ResourceName">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BottomInAndOutStyle" tools:ignore="ResourceName">
        <item name="android:windowEnterAnimation">@anim/qa_anim_draft_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/qa_anim_draft_dialog_out</item>
    </style>

    <style name="tab_style" tools:ignore="ResourceName">
        <item name="android:textSize">18sp</item>

        <item name="android:unselectedAlpha">0.6</item>
    </style>

    <style name="qa_transparent_dialog" parent="Theme.AppCompat.Dialog" tools:ignore="ResourceName">
        <item name="android:windowBackground">@null</item>
    </style>
</resources>