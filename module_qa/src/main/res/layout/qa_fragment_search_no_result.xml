<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_window_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="114dp"
        android:src="@drawable/qa_ic_no_circles" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="33dp"
        android:text="没有相关内容~" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/qa_btn_no_result_ask_question"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="91dp"
        android:background="@drawable/qa_shape_send_dynamic_btn_blue_background"
        android:text="@string/qa_fragment_head_give_question"
        android:textColor="@color/common_white_font_color"
        android:textSize="18sp" />
</LinearLayout>