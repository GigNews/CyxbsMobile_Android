<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置阴影 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- 阴影的背景颜色为透明 -->
            <corners android:radius="14dp" /> <!-- 设置阴影层的圆角半径 -->
        </shape>
    </item>

    <!-- 设置内容背景 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#1AF4F7FF"
            android:endColor="#FFFFFF"
            android:angle="270" /> <!-- 渐变角度，90 表示从上到下渐变 -->

            <stroke
                android:color="#FFFFFF"
            android:width="1dp" /> <!-- 设置边界线的宽度为1dp -->
            <corners android:radius="14dp" /> <!-- 设置内容背景的圆角半径 -->
        </shape>
    </item>

</layer-list>