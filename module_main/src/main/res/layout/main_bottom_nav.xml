<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_nav_main_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:background="@color/config_common_background_color"
    android:gravity="center">

    <CheckedTextView
        android:id="@+id/main_btn_nav_explore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/main_selector_bottom_discovery"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="发现"
        android:textAlignment="center"
        android:textColor="@color/main_selector_main_bottom_navigation_text"
        android:textSize="10sp"
        tools:ignore="HardcodedText,SmallSp" />

    <CheckedTextView
        android:id="@+id/main_btn_nav_qa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/main_selector_bottom_qa"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="邮问"
        android:textAlignment="center"
        android:textColor="@color/main_selector_main_bottom_navigation_text"
        android:textSize="10sp"
        tools:ignore="HardcodedText,SmallSp" />

    <CheckedTextView
        android:id="@+id/main_btn_nav_mine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/main_selector_bottom_mine"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:text="我的"
        android:textAlignment="center"
        android:textColor="@color/main_selector_main_bottom_navigation_text"
        android:textSize="10sp"
        tools:ignore="HardcodedText,SmallSp" />

</LinearLayout>
