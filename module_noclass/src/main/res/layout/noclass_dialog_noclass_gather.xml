<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    tools:ignore="HardcodedText"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_noclass_gather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_noclass_gather_dialog"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:background="@drawable/noclass_shape_sheet_dialog_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"
            android:textColor="@color/noclass_primary_text_color"
            android:text="忙碌0人"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/noclass_tv_gathering_busy_total" />

        <TextView
            android:id="@+id/noclass_tv_gathering_total"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            android:alpha="0.6"
            android:textColor="@color/noclass_primary_text_color"
            android:text="人数：共记 6 人"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclass_tv_gathering_busy_total"
            />

        <TextView
            android:id="@+id/noclass_tv_gathering_time"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0"
            android:alpha="0.6"
            android:textColor="@color/noclass_primary_text_color"
            tools:text="时间：周日 9-10 19:00-20:40"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclass_tv_gathering_total" />

        <Button
            android:id="@+id/noclass_btn_arrange_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/noclass_shape_gathering_class_bg"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="安排行程"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            app:layout_constraintVertical_bias="0.4"
            android:background="@color/noclass_gather_line_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/noclassView3" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/noclass_vp_gather_container"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclassView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"/>

        <com.mredrock.cyxbs.noclass.widget.StickIndicator
            android:id="@+id/noclass_indicator_gathering"
            app:layout_constraintVertical_bias="0"
            app:noclass_indicator_show_count="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclass_vp_gather_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>