<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/noclass_item_student_layout">

    <ImageView
        android:id="@+id/noclassShapeableimageview"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:background="@color/pd_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noclass_tv_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/noclass_member_name_color"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/noclassShapeableimageview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="陈思言" />

    <TextView
        android:id="@+id/noclass_tv_student_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/noclass_search_student_color"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/noclassShapeableimageview"
        app:layout_constraintTop_toBottomOf="@+id/noclass_tv_student_name"
        app:layout_constraintVertical_bias="0"
        tools:text="软件工程" />

    <TextView
        android:textSize="12sp"
        android:textColor="@color/noclass_search_student_color"
        android:layout_marginStart="8dp"
        android:id="@+id/noclass_tv_student_id"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noclass_tv_student_name"
        tools:text="2021214171"
        app:layout_constraintStart_toEndOf="@+id/noclass_tv_student_major" />

    <ImageView
        android:id="@+id/noclass_iv_student_add"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noclass_ic_add_student"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>