<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_noclass_stu_select"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    tools:context=".pages.stuselect.NoClassStuSelectActivity"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_stu_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/noclass_shape_noclass_stu_select"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/noclass_guideline">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_noclass_stu_select_cancel"
            android:text="取消"
            android:textColor="@color/common_level_two_font_color"
            android:textSize="15sp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/noclass_rv_stu_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/noclass_guideline"
            tools:layout_editor_absoluteX="5dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/noclass_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>