<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/config_white_black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_noclass_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/iv_noclass_group_manager_return"
            android:paddingStart="7dp"
            android:paddingEnd="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/noclass_ic_return"
            tools:ignore="ContentDescription" />
        <TextView
            android:paddingStart="6dp"
            android:paddingEnd="12dp"
            android:textColor="@color/noclass_primary_text_color"
            android:textSize="21sp"
            android:text="分组管理"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_marginTop="8dp"
        android:id="@+id/noclass_group_manager_tb_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.1"
        android:background="@color/noclass_line_bg_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_noclass_group" />

    <LinearLayout
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.45"
        android:id="@+id/ll_noclass_empty_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tb_noclass_group"
        android:orientation="vertical">
        <TextView
            android:textSize="18sp"
            android:textColor="@color/noclass_hint_text_color_dark"
            android:layout_gravity="center"
            android:text="点击新建"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/noclass_hint_text_color_dark"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建你的第一个分组"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="16dp"
        android:id="@+id/rv_noclass_group_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noclass_group_manager_tb_line"
        app:layout_constraintBottom_toTopOf="@+id/btn_noclass_group_delete" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btn_noclass_group_create"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/noclass_shape_button_common_bg"
        android:text="新建"
        android:textColor="@color/config_white_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintVertical_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintVertical_bias="0.88"
        app:layout_constraintHorizontal_bias="0.16"
        android:id="@+id/btn_noclass_group_delete"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/noclass_shape_button_delete_bg"
        android:text="删除"
        android:textColor="@color/config_white_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>