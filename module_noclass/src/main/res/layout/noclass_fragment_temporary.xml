<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/noclass_temporary_et_add_classmate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/noclass_shape_add_shape_bg"
            android:hint="添加同学、分组或班级"
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:paddingStart="19dp"
            android:paddingTop="12dp"
            android:paddingEnd="19dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColor="@color/config_level_two_font_color"
            android:textColorHint="@color/noclass_hint_text_color_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="Autofill,TextFields" />

        <View
            android:id="@+id/noclassView3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.1"
            android:background="@color/noclass_line_bg_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclass_temporary_et_add_classmate" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/noclass_temporary_rv_show"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/noclass_temporary_btn_query"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclassView3" />


        <Button
            android:id="@+id/noclass_temporary_btn_query"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/noclass_shape_button_common_bg"
            android:text="查询"
            android:textColor="@color/config_white_black"
            android:textSize="18sp"
            android:layout_marginBottom="58dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/noclass_temporary_bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        android:fitsSystemWindows="true"
        android:paddingTop="10dp"
        app:behavior_peekHeight="0dp"
        android:layout_marginBottom="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">
    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>