<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/config_window_background">

        <androidx.appcompat.widget.Toolbar
            app:layout_constraintVertical_bias="0"
            android:id="@+id/tb_noclass_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/iv_noclass_return"
                android:paddingStart="7dp"
                android:paddingEnd="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/noclass_ic_return"
                tools:ignore="ContentDescription" />

            <TextView
                android:paddingStart="6dp"
                android:paddingEnd="12dp"
                android:textColor="@color/noclass_primary_text_color"
                android:textSize="21sp"
                android:text="没课约"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText" />
        </androidx.appcompat.widget.Toolbar>

        <View
            app:layout_constraintVertical_bias="0"
            android:id="@+id/noclassView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.1"
            android:background="@color/noclass_line_bg_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_noclass_main"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/noclass_main_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclassView2"
            app:tabMaxWidth="200dp"
            app:tabMinWidth="100dp"
            app:tabMode="fixed"
            app:tabIndicator="@drawable/noclass_layer_list_tab_indicator"
            app:tabIndicatorHeight="5dp"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="@color/pd_blue"
            app:tabSelectedTextAppearance="@color/pd_blue"
            app:tabTextColor="@color/config_black_white">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/noclass_main_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noclass_main_tab" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/noclass_course_bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        android:fitsSystemWindows="true"
        android:paddingTop="10dp"
        app:behavior_peekHeight="0dp"
        android:layout_marginBottom="0dp"
        app:layout_behavior="@string/bottom_sheet_behavior">
    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
